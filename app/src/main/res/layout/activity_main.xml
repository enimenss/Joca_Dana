<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forestgreen"
    tools:context="com.example.a38162.attractionsofnis.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="384dp"
        android:layout_height="298dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="408dp"
            android:layout_height="241dp"
            android:paddingTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:srcCompat="@drawable/reka" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="352dp"
        android:layout_height="145dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox_landmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landmarks"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_museums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Museums"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_interesting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interesting places"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_night_life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurants (night life)"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:ems="8"
            android:gravity="bottom|right"
            android:inputType="textMultiLine"
            android:text="@string/mainLabel"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text=" Let's start! "
        android:drawableRight="@drawable/baseline_tag_faces_white_18dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="@string/scores"
        android:textColor="@color/white"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_Ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="454dp" />


</android.support.constraint.ConstraintLayout>
